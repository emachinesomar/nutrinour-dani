---
import CTAButton from './CTAButton.astro';
---

<header class="sticky top-0 z-50 bg-white/90 backdrop-blur-sm border-b border-gray-100 shadow-sm">
  <div class="container mx-auto flex justify-between items-center py-4">
    <a href="/" class="text-xl font-display font-bold text-primary">
      NutriExperto
    </a>
    
    <nav class="hidden md:flex space-x-8">
      <a href="/" class="font-medium hover:text-primary transition-colors">Inicio</a>
      <a href="/about" class="font-medium hover:text-primary transition-colors">Sobre Mí</a>
      <a href="/services" class="font-medium hover:text-primary transition-colors">Servicios</a>
      <a href="/blog" class="font-medium hover:text-primary transition-colors">Blog</a>
      <a href="/contact" class="font-medium hover:text-primary transition-colors">Contacto</a>
    </nav>
    
    <div class="hidden md:block">
      <CTAButton href="/appointment" text="Reservar Cita" />
    </div>
    
    <button id="mobile-menu-button" class="md:hidden p-2 focus:outline-none" aria-label="Menu">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>
  
  <div id="mobile-menu" class="hidden md:hidden">
    <div class="container mx-auto py-4 px-4 flex flex-col space-y-4">
      <a href="/" class="font-medium py-2 hover:text-primary transition-colors">Inicio</a>
      <a href="/about" class="font-medium py-2 hover:text-primary transition-colors">Sobre Mí</a>
      <a href="/services" class="font-medium py-2 hover:text-primary transition-colors">Servicios</a>
      <a href="/blog" class="font-medium py-2 hover:text-primary transition-colors">Blog</a>
      <a href="/contact" class="font-medium py-2 hover:text-primary transition-colors">Contacto</a>
      <CTAButton href="/appointment" text="Reservar Cita" />
    </div>
  </div>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const menuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (menuButton && mobileMenu) {
      menuButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });
    }
  });
</script>