---
import CTAButton from './CTAButton.astro';

export interface Props {
  title: string;
  subtitle: string;
  ctaText?: string;
  ctaLink?: string;
  secondaryCtaText?: string;
  secondaryCtaLink?: string;
  image?: string;
}

const { 
  title, 
  subtitle, 
  ctaText = 'Reservar Cita', 
  ctaLink = '/appointment', 
  secondaryCtaText, 
  secondaryCtaLink,
  image = 'https://images.pexels.com/photos/5949897/pexels-photo-5949897.jpeg'
} = Astro.props;
---

<section class="relative overflow-hidden">
  <div class="container mx-auto py-16 md:py-24 flex flex-col md:flex-row items-center">
    <div class="md:w-1/2 mb-10 md:mb-0 z-10">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight mb-6">{title}</h1>
      <p class="text-lg md:text-xl text-gray-700 mb-8 md:max-w-xl">{subtitle}</p>
      <div class="flex flex-col sm:flex-row gap-4">
        <CTAButton href={ctaLink} text={ctaText} />
        {secondaryCtaText && (
          <a 
            href={secondaryCtaLink} 
            class="inline-block text-center py-3 px-6 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-50 transition-colors"
          >
            {secondaryCtaText}
          </a>
        )}
      </div>
    </div>
    <div class="md:w-1/2 relative z-10">
      <img 
        src={image} 
        alt="Nutricionista experto" 
        class="w-full h-auto rounded-lg shadow-xl object-cover"
        width="600"
        height="450"
      />
    </div>
  </div>
  <div class="absolute top-0 right-0 w-full md:w-1/2 h-full bg-primary-light/10 rounded-bl-[100px] -z-10"></div>
</section>